  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>

  <div class="field">
    <div class="control">
      <%= link_to 'Cancel', root_path, class:"button is-large is-fullwidth" %>
    </div>
  </div>

<% end %>
